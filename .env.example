# Server Configuration
PORT=3000
LOG_LEVEL=info

# GitHub Webhook Secret (optional but recommended for security)
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here

# Repositories to pull when webhook is received
# JSON array with repository configurations
REPOSITORIES=[
  {
    "name": "example-repo",
    "path": "/path/to/your/repository",
    "branch": "main"
  }
]

# Docker services to restart after repository updates
# JSON array of service names
DOCKER_SERVICES=["service1", "service2"]